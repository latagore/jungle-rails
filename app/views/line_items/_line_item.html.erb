
<tr>
  <td><%= image_tag line_item.product.image.tiny, alt: line_item.product.name %></td>
  <td>
    <h4><%= line_item.product.name %></h4>
    <p class="description">
      <%= line_item.product.description %>
    </p>
  </td>
  <td><%= line_item.quantity %></td>
  <td><%= humanized_money_with_symbol line_item.item_price_cents / 100.0 %></td>
  <td><%= humanized_money_with_symbol line_item.total_price_cents / 100.0%></td>
</tr>
